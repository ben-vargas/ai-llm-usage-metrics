{
  "$schema": "https://unpkg.com/release-it@19/schema/release-it.json",
  "git": {
    "requireBranch": ["master", "main"],
    "requireCleanWorkingDir": true,
    "commitMessage": "chore(release): v${version}",
    "tagName": "v${version}"
  },
  "github": {
    "release": true,
    "releaseName": "v${version}"
  },
  "npm": {
    "publish": true,
    "skipChecks": true
  },
  "hooks": {
    "before:init": [
      "bun run lint",
      "bun run typecheck",
      "bun run test",
      "bun run build",
      "bun run pack:check"
    ]
  }
}
