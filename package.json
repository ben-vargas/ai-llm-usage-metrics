{
  "name": "llm-usage-metrics",
  "version": "0.3.3",
  "description": "CLI for aggregating local LLM usage metrics from pi, codex, gemini, and opencode sessions",
  "type": "module",
  "packageManager": "pnpm@10.17.1",
  "engines": {
    "node": ">=24"
  },
  "bin": {
    "llm-usage": "dist/index.js"
  },
  "files": [
    "dist",
    "README.md",
    "LICENSE"
  ],
  "scripts": {
    "build": "tsup src/cli/index.ts --format esm --dts --clean --sourcemap",
    "cli": "tsx src/cli/index.ts",
    "lint": "eslint .",
    "typecheck": "tsc --noEmit",
    "test": "vitest run --coverage",
    "format:check": "prettier --check .",
    "format:write": "prettier --write .",
    "pack:check": "npm pack",
    "smoke:dist-opencode": "node scripts/smoke-dist-opencode.mjs",
    "perf:report-baseline": "node --import tsx scripts/perf-report-baseline.mjs",
    "perf:production-benchmark": "node scripts/perf-production-benchmark.mjs",
    "release": "release-it",
    "release:dry": "release-it --dry-run",
    "release:ci": "release-it --ci",
    "site:dev": "pnpm --filter llm-usage-metrics-site dev",
    "site:build": "pnpm --filter llm-usage-metrics-site build",
    "site:preview": "pnpm --filter llm-usage-metrics-site preview",
    "site:check": "pnpm --filter llm-usage-metrics-site check",
    "site:docs:generate": "node scripts/generate-cli-reference.mjs",
    "docs:mermaid:validate": "node scripts/validate-mermaid.mjs"
  },
  "keywords": [
    "llm",
    "usage",
    "cli",
    "pi",
    "codex",
    "gemini",
    "opencode"
  ],
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/ayagmar/llm-usage-metrics"
  },
  "bugs": {
    "url": "https://github.com/ayagmar/llm-usage-metrics/issues"
  },
  "homepage": "https://ayagmar.github.io/llm-usage-metrics/",
  "dependencies": {
    "commander": "^14.0.3",
    "markdown-table": "^3.0.4",
    "picocolors": "^1.1.1"
  },
  "devDependencies": {
    "@eslint/js": "^10.0.1",
    "@release-it/conventional-changelog": "^10.0.5",
    "@types/node": "^25.3.0",
    "@vitest/coverage-v8": "^4.0.18",
    "eslint": "^10.0.1",
    "eslint-config-prettier": "^10.1.8",
    "prettier": "^3.8.1",
    "release-it": "^19.2.4",
    "tsup": "^8.5.1",
    "tsx": "^4.21.0",
    "typescript": "^5.9.3",
    "typescript-eslint": "^8.56.0",
    "vitest": "^4.0.18"
  }
}
