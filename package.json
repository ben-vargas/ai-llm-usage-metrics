{
  "name": "llm-usage-metrics",
  "version": "0.1.0",
  "description": "CLI for aggregating local LLM usage metrics from pi and codex sessions",
  "type": "module",
  "engines": {
    "node": ">=20"
  },
  "bin": {
    "usage": "dist/index.js"
  },
  "files": [
    "dist",
    "README.md",
    "LICENSE"
  ],
  "scripts": {
    "build": "tsup src/cli/index.ts --format esm --dts --clean --sourcemap",
    "cli": "bun run src/cli/index.ts",
    "lint": "eslint .",
    "typecheck": "tsc --noEmit",
    "test": "vitest run",
    "format:check": "prettier --check .",
    "format:write": "prettier --write .",
    "pack:check": "npm pack"
  },
  "keywords": [
    "llm",
    "usage",
    "cli",
    "pi",
    "codex"
  ],
  "license": "MIT",
  "dependencies": {
    "commander": "^13.1.0",
    "markdown-table": "^3.0.4",
    "table": "^6.9.0"
  },
  "devDependencies": {
    "@eslint/js": "^9.20.0",
    "@types/node": "^22.13.10",
    "eslint": "^9.20.0",
    "eslint-config-prettier": "^10.0.1",
    "prettier": "^3.5.2",
    "tsup": "^8.3.6",
    "typescript": "^5.7.3",
    "typescript-eslint": "^8.24.1",
    "vitest": "^3.0.5"
  }
}
