---
import StarlightPage from '@astrojs/starlight/components/StarlightPage.astro';

const basePath = import.meta.env.BASE_URL.endsWith('/')
  ? import.meta.env.BASE_URL
  : `${import.meta.env.BASE_URL}/`;
const screenshotPath = `${basePath}screenshot.png`;
const docsPath = `${basePath}docs/`;

// Fetch npm version at build time for fallback
let npmVersion = '';
try {
  const response = await fetch('https://registry.npmjs.org/llm-usage-metrics/latest');
  const data = await response.json();
  npmVersion = data.version || '';
} catch {
  // Build-time fetch failed, runtime module handles fallback copy.
}
