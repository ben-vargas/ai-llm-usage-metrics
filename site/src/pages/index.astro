$ llm-usage <span class="flag">daily</span> --source-dir pi=/var/lib/pi --source-dir codex=/var/log/codex

<span class="cmt"># Explicit OpenCode DB path</span>
$ llm-usage <span class="flag">daily</span> --source opencode --opencode-db /path/to/opencode.db

